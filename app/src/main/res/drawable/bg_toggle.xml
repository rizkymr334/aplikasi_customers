<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6F91"/> <!-- Pink saat aktif -->
            <corners android:radius="20dp"/>
            <padding android:left="20dp" android:top="12dp"
                android:right="20dp" android:bottom="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <!-- Abu saat nonaktif -->
            <corners android:radius="20dp"/>
            <padding android:left="20dp" android:top="12dp"
                android:right="20dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
